@model BanHoa.Models.KhachHang

@{
    ViewBag.Title = "LogInAndRegister";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>LogInAndRegister</h2>
<div class="theme-login">
    <!--form sign in & register-->
    <div class="wrapper">
        <!-- form sign in-->
        <div class="form-box login">
            <h2>Đăng nhập</h2>
            @using (Html.BeginForm("LogIn", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                if(Session["LogInError"] != null)
                {
                    <p style="color: red; font-weight: bold; ">@Session["LogInError"].ToString()</p>
                    @(Session["LogInError"] = "")
                }
                if(Session["Success"] != null)
                {
                    <p style="color:green;font-weight:bold">@Session["Success"].ToString()</p>
                    @(Session["Success"] = "")
                }
                <div class="input-box">
                    <span class="icon"><ion-icon name="mail-outline"></ion-icon></span>
                    <input type="email" name="Email" required>
                    <label>Email</label>
                </div>

                <div class="input-box">
                    <span class="icon"><ion-icon name="lock-closed-outline"></ion-icon></span>
                    <input type="Password" name="MatKhau" required>
                    <label>Mật khẩu</label>
                </div>

                <div class="remember-forgot">
                    <label for=""><input type="checkbox">Luôn ghi nhớ</label>
                    <a href="#">Quên mật khẩu ?</a>
                </div>

                <button type="submit" class="btn-login">Đăng nhập</button>

                <div class="login-register">
                    <p>Bạn chưa có tài khoản ? <a href="#" class="register-link">Đăng ký</a></p>
                </div>

            }
            
        </div>
        <!-- form register-->

        <div class="form-box register">
            <h2>Đăng ký</h2>
            @using (Html.BeginForm("Register", "User", System.Web.Mvc.FormMethod.Post))
            {
                 @Html.AntiForgeryToken()

                <div class="input-box">
                    <span class="icon"><ion-icon name="person-outline"></ion-icon></span>
                    <input type="text" name="TenKH" minlength="3" maxlength="50" required>
                    <label>Họ và tên</label>
                    @Html.ValidationMessageFor(m => m.TenKH, "", new { @class = "badge badge-danger" })
                </div>

                <div class="input-box">
                    <span class="icon"><ion-icon name="mail-outline"></ion-icon></span>
                    <input type="email" name="Email" minlength="3" maxlength="50" required>
                    <label>Email</label>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
                </div>

                <div class="input-box">
                    <span class="icon"><ion-icon name="person-outline"></ion-icon></span>
                    <input type="text" name="DiaChi" minlength="3" maxlength="50" required>
                    <label>Địa chỉ</label>
                    @Html.ValidationMessageFor(m => m.DiaChi, "", new { @class = "badge badge-danger" })
                </div>

                <div class="input-box">
                    <span class="icon"><ion-icon name="lock-closed-outline"></ion-icon></span>
                    <input type="Password" name="MatKhau" minlength="3" maxlength="50" required>
                    <label>Mật khẩu</label>
                    @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "badge badge-danger" })
                </div>

                <div class="remember-forgot">
                    <label for=""><input type="checkbox"> Tôi đồng ý với điều khoản và điều kiện</label>
                </div>

                <button type="submit" class="btn-login">Đăng ký</button>

                <div class="login-register">
                    <p>Don't have account ? <a href="#" class="login-link">Login</a></p>
                </div>

            }
            
        </div>
    </div>
</div>
