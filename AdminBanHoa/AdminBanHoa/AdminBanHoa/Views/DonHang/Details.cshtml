@model IEnumerable<AdminBanHoa.Models.ChiTietDH>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Chi tiết đơn hàng</h2>

<div class="background-dsdonhang">
    <div class="content1">
        <div class="dsdonhang">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MaDH)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaSP)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TenSP)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HinhAnh)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ThanhTien)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaDH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaSP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenSP)
                        </td>
                        <td>
                            <img class="imgSP" src="@Url.Content("/Content/img/" +item.HinhAnh)" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThanhTien)
                        </td>
                        <td>

                            @Html.ActionLink("Chi tiết", "DetailsSP", new { id = item.MaSP }, new { @class = "btn btn-primary" }) 

                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>

</div>