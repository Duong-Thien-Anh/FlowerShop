@model IEnumerable<AdminBanHoa.Models.DonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<div class="tieude">
    <h1 style="text-align:center">DANH SÁCH ĐƠN HÀNG</h1>
</div>
<div style="height:20px;"></div>
<div class="background-dsdonhang">
    <div class="content1">
        <div class="dsdonhang">
            <table class="table">
                <tr>
                    <th>
                        Mã Đơn Hàng
                    </th>
                    <th>
                        Mã Khách Hàng
                    </th>
                    <th>
                        Tên Khách Hàng
                    </th>
                    <th>
                        Ngày Đặt Hoa
                    </th>
                    <th>
                        Ngày Giao Hoa
                    </th>
                    <th>
                        Địa Chỉ Giao Hoa
                    </th>
                    <th>
                        Tình Trạng Đơn Hàng
                    </th>
                    <th>
                        Phương Thức Thanh Toán
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaDH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaKH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayDatHoa)
                        </td>
                        <td>
                            @if (item.NgayGiaoHoa == null)
                            {
                                <p>Chưa Xác Định</p>
                            }
                            @if (item.NgayGiaoHoa != null)
                            {
                                <p>@item.NgayGiaoHoa</p>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiaChiGiaoHoa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TinhTrangDH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhuongThucTT)
                        </td>
                        <td>
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDH }, new { @class = "btn btn-primary" })
                        </td>
                        <td>
                            @if (item.TinhTrangDH != "Đã Huỷ")
                            {
                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaDH }, new { @class = "btn btn-primary" })
                            }

                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>

</div>